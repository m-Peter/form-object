<%= f.fields_for :speaker, @conference_form.speaker do |speaker| %>
  <h2>Speaker Details</h2>
  <div class="field">
    <%= speaker.label :name, "Speaker Name" %><br>
    <%= speaker.text_field :name %>
  </div>
  <div class="field">
    <%= speaker.label :occupation %><br>
    <%= speaker.text_field :occupation %>
  </div>

  <%= render :partial => 'presentations', :locals => { :speaker => speaker } %>

<% end %>