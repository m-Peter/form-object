<div class="fields">
  <div class="field">
    <%= f.label :content, "Question" %><br>
    <%= f.text_area :content, :cols => 30, :rows => 2 %>
  </div>

  <h2>Answers</h2>
  <div id="field_collection">
    <%= f.fields_for :answers do |answer_fields| %>
      <%= render "answers", :f => answer_fields %>
    <% end %>
  </div>
  
</div>
